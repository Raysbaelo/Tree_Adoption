 <div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Add a trees</h3>
        <%= simple_form_for @tree do |f| %>
          <%= f.input :fruit %>
          <%= f.input :name %>
          <%= f.input :description %>
          <%= f.input :price_per_year %>
          <%= f.input :quantity_per_year %>
          <%= f.submit class: 'btn btn-secondary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
